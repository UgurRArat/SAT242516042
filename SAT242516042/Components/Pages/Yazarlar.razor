@page "/yazarlar"
@using MyDbModels
@using Providers
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@rendermode InteractiveServer

@inject IMyDbModel_Provider Provider
@inject IJSRuntime JS

<PageTitle>Yazarlar</PageTitle>

<style>
    /* ORTAK STİLLER (Kategoriler ile aynı) */
    .page-title {
        background: linear-gradient(45deg, #11998e, #38ef7d); /* Yazarlar için Yeşil Tonları */
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 800;
        letter-spacing: -1px;
    }

    .modern-card {
        background: #fff;
        border: none;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        transition: transform 0.3s ease;
    }

    .search-input {
        border-radius: 50px;
        padding: 12px 25px;
        border: 2px solid #eee;
        background-color: #f8f9fa;
        transition: all 0.3s;
    }

        .search-input:focus {
            border-color: #38ef7d;
            background-color: #fff;
            box-shadow: 0 0 15px rgba(56, 239, 125, 0.3);
            outline: none;
        }

    .modern-table thead {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        color: white;
    }

    .modern-table th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        padding: 18px;
        border: none;
    }

    .modern-table td {
        padding: 15px 18px;
        vertical-align: middle;
        border-bottom: 1px solid #f0f0f0;
        color: #555;
        font-weight: 500;
    }

    .modern-table tbody tr:hover {
        background-color: #f0fdf4; /* Açık yeşil hover */
        transform: scale(1.005);
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    }

    .status-badge {
        padding: 6px 15px;
        border-radius: 30px;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
    }

    .status-active {
        background-color: #d1fae5;
        color: #059669;
    }

    .status-passive {
        background-color: #fee2e2;
        color: #dc2626;
    }

    .btn-action {
        width: 35px;
        height: 35px;
        border-radius: 10px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: none;
        transition: all 0.2s;
        margin-right: 5px;
    }

    .btn-edit {
        background-color: #e0e7ff;
        color: #4338ca;
    }

        .btn-edit:hover {
            background-color: #4338ca;
            color: white;
        }

    .btn-delete {
        background-color: #fee2e2;
        color: #dc2626;
    }

        .btn-delete:hover {
            background-color: #dc2626;
            color: white;
        }

    .btn-gradient-success {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        border: none;
        color: white;
        padding: 10px 20px;
        border-radius: 50px;
        font-weight: 600;
        box-shadow: 0 4px 15px rgba(56, 239, 125, 0.4);
        transition: transform 0.2s;
    }

        .btn-gradient-success:hover {
            transform: translateY(-2px);
            color: white;
            box-shadow: 0 6px 20px rgba(56, 239, 125, 0.6);
        }

    .page-btn {
        background: white;
        border: 2px solid #eee;
        color: #11998e;
        border-radius: 10px;
        padding: 8px 15px;
        transition: all 0.3s;
    }

        .page-btn:hover {
            border-color: #11998e;
            background: #11998e;
            color: white;
        }
</style>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h2 class="display-6 page-title mb-0">
                <i class="bi bi-vector-pen me-2"></i>Yazarlar
            </h2>
            <p class="text-muted small mb-0">Sisteme kayıtlı yazarları yönetin.</p>
        </div>
        <div class="d-flex gap-2">
            <AuthorizeView Roles="Yonetici,Kutuphaneci">
                <Authorized>
                    <button class="btn btn-gradient-success" @onclick="() => KayitFormuAc(new Yazar())">
                        <i class="bi bi-plus-lg me-1"></i> Yeni Yazar
                    </button>
                </Authorized>
            </AuthorizeView>
        </div>
    </div>

    <div class="modern-card p-4">
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="position-relative">
                    <input type="text" class="form-control search-input ps-5" placeholder="Yazar Ara..."
                           @bind="SearchText" @bind:event="oninput" @onkeyup="VerileriGetir" />
                    <i class="bi bi-search position-absolute text-muted" style="left: 20px; top: 14px;"></i>
                </div>
            </div>
        </div>

        <div class="table-responsive" style="border-radius: 15px; overflow: hidden;">
            <table class="table modern-table mb-0">
                <thead>
                    <tr>
                        <th>#ID</th>
                        <th>Ad Soyad</th>
                        <th>Biyografi</th>
                        <th class="text-center">Durum</th>
                        <AuthorizeView Roles="Yonetici,Kutuphaneci">
                            <Authorized><th class="text-end pe-4">İşlemler</th></Authorized>
                        </AuthorizeView>
                    </tr>
                </thead>
                <tbody>
                    @if (Liste == null)
                    {
                        <tr><td colspan="5" class="text-center py-5">Yükleniyor...</td></tr>
                    }
                    else if (Liste.Count == 0)
                    {
                        <tr><td colspan="5" class="text-center py-5">Kayıt yok.</td></tr>
                    }
                    else
                    {
                        @foreach (var item in Liste)
                        {
                            <tr>
                                <td class="fw-bold text-success">#@item.Id</td>
                                <td class="fw-bold text-dark">@item.AdSoyad</td>
                                <td class="text-secondary small">
                                    @(item.Biyografi.Length > 50 ? item.Biyografi.Substring(0, 50) + "..." : item.Biyografi)
                                </td>
                                <td class="text-center">
                                    @if (item.AktifMi)
                                    {
                                        <span class="status-badge status-active">Aktif</span>
                                    }
                                    else
                                    {

                                        <span class="status-badge status-passive">Pasif</span>
                                    }
                                </td>
                                <AuthorizeView Roles="Yonetici,Kutuphaneci">
                                    <Authorized>
                                        <td class="text-end pe-3">
                                            <button class="btn-action btn-edit" @onclick="() => KayitFormuAc(item)"><i class="bi bi-pencil-fill"></i></button>
                                            <button class="btn-action btn-delete" @onclick="() => Sil(item.Id)"><i class="bi bi-trash-fill"></i></button>
                                        </td>
                                    </Authorized>
                                </AuthorizeView>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-center mt-4">
            <div class="d-flex gap-2 align-items-center">
                <button class="page-btn @(PageNumber == 1 ? "disabled opacity-50" : "")" @onclick="() => SayfaDegistir(PageNumber - 1)"><i class="bi bi-chevron-left"></i></button>
                <span class="fw-bold text-muted mx-2">Sayfa @PageNumber</span>
                <button class="page-btn @(Liste?.Count < PageSize ? "disabled opacity-50" : "")" @onclick="() => SayfaDegistir(PageNumber + 1)"><i class="bi bi-chevron-right"></i></button>
            </div>
        </div>
    </div>
</div>

@if (FormAcikMi)
{
    <div class="modal fade show d-block" style="background-color: rgba(0,0,0,0.6); backdrop-filter: blur(4px);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg" style="border-radius: 20px;">
                <div class="modal-header border-0 pb-0">
                    <h5 class="modal-title fw-bold text-success ps-2">@(Secili.Id == 0 ? "✨ Yeni Yazar" : "✏️ Yazar Düzenle")</h5>
                    <button type="button" class="btn-close" @onclick="FormuKapat"></button>
                </div>
                <div class="modal-body p-4">
                    <div class="mb-3">
                        <label class="fw-bold text-muted small mb-1">Ad Soyad</label>
                        <input class="form-control form-control-lg bg-light border-0" @bind="Secili.AdSoyad" style="border-radius: 10px;" />
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold text-muted small mb-1">Biyografi</label>
                        <textarea class="form-control bg-light border-0" @bind="Secili.Biyografi" rows="3" style="border-radius: 10px;"></textarea>
                    </div>
                    <div class="form-check form-switch p-3 bg-light rounded-3 ms-0">
                        <input class="form-check-input ms-0 me-2" type="checkbox" @bind="Secili.AktifMi" />
                        <label class="form-check-label fw-bold text-dark">Yazar Aktif Mi?</label>
                    </div>
                </div>
                <div class="modal-footer border-0 pt-0 pe-4 pb-4">
                    <button class="btn btn-light rounded-pill px-4" @onclick="FormuKapat">İptal</button>
                    <button class="btn btn-gradient-success rounded-pill px-4" @onclick="Kaydet">Kaydet</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    List<Yazar> Liste = new();
    Yazar Secili = new();
    string SearchText = "";
    int PageNumber = 1;
    int PageSize = 5;
    bool FormAcikMi = false;

    protected override async Task OnInitializedAsync() => await VerileriGetir();

    async Task VerileriGetir()
    {
        var res = await Provider.GetItems<Yazar>("sp_Yazarlar_Islem", ("IslemTuru", "LISTE"), ("PageNumber", PageNumber), ("PageSize", PageSize), ("SearchText", SearchText ?? ""));
        Liste = res.ToList();
    }
    async Task SayfaDegistir(int s) { if (s > 0) { PageNumber = s; await VerileriGetir(); } }
    void KayitFormuAc(Yazar y) { Secili = new Yazar { Id = y.Id, AdSoyad = y.AdSoyad, Biyografi = y.Biyografi, AktifMi = y.AktifMi }; FormAcikMi = true; }
    void FormuKapat() => FormAcikMi = false;
    async Task Kaydet()
    {
        await Provider.Execute<Yazar>("sp_Yazarlar_Islem", ("IslemTuru", "KAYDET"), ("Id", Secili.Id), ("AdSoyad", Secili.AdSoyad), ("Biyografi", Secili.Biyografi ?? ""), ("AktifMi", Secili.AktifMi));
        FormAcikMi = false; await VerileriGetir();
    }
    async Task Sil(int id)
    {
        if (await JS.InvokeAsync<bool>("confirm", "Silmek istiyor musunuz?"))
        {
            await Provider.Execute<Yazar>("sp_Yazarlar_Islem", ("IslemTuru", "SIL"), ("Id", id));
            await VerileriGetir();
        }
    }
}