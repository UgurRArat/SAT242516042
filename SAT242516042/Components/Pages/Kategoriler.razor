@page "/kategoriler"
@using MyDbModels
@using Providers
@using Microsoft.AspNetCore.Authorization
@using System.IO
@attribute [Authorize]
@rendermode InteractiveServer

@inject SAT242516042.Services.PdfReportService ReportService
@inject IMyDbModel_Provider Provider
@inject IJSRuntime JS

<PageTitle>Kategoriler</PageTitle>

<style>
    /* MODERN GRADYAN VE GÖLGE STİLLERİ */
    .page-title {
        background: linear-gradient(45deg, #4e54c8, #8f94fb);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 800;
        letter-spacing: -1px;
    }

    .modern-card {
        background: #fff;
        border: none;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08); /* Yumuşak gölge */
        overflow: hidden;
        transition: transform 0.3s ease;
    }

    .search-input {
        border-radius: 50px;
        padding: 12px 25px;
        border: 2px solid #eee;
        background-color: #f8f9fa;
        transition: all 0.3s;
    }

        .search-input:focus {
            border-color: #8f94fb;
            background-color: #fff;
            box-shadow: 0 0 15px rgba(143, 148, 251, 0.3);
            outline: none;
        }

    /* TABLO TASARIMI */
    .modern-table thead {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .modern-table th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        padding: 18px;
        border: none;
    }

    .modern-table td {
        padding: 15px 18px;
        vertical-align: middle;
        border-bottom: 1px solid #f0f0f0;
        color: #555;
        font-weight: 500;
    }

    .modern-table tbody tr {
        transition: all 0.2s;
    }

        .modern-table tbody tr:hover {
            background-color: #f8f9ff;
            transform: scale(1.005);
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        }

    /* BADGE (DURUM) */
    .status-badge {
        padding: 6px 15px;
        border-radius: 30px;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
    }

    .status-active {
        background-color: #d1fae5;
        color: #059669;
    }

    .status-passive {
        background-color: #fee2e2;
        color: #dc2626;
    }

    /* BUTONLAR */
    .btn-action {
        width: 35px;
        height: 35px;
        border-radius: 10px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: none;
        transition: all 0.2s;
        margin-right: 5px;
    }

    .btn-edit {
        background-color: #e0e7ff;
        color: #4338ca;
    }

        .btn-edit:hover {
            background-color: #4338ca;
            color: white;
        }

    .btn-delete {
        background-color: #fee2e2;
        color: #dc2626;
    }

        .btn-delete:hover {
            background-color: #dc2626;
            color: white;
        }

    .btn-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        color: white;
        padding: 10px 20px;
        border-radius: 50px;
        font-weight: 600;
        box-shadow: 0 4px 15px rgba(118, 75, 162, 0.4);
        transition: transform 0.2s;
    }

        .btn-gradient-primary:hover {
            transform: translateY(-2px);
            color: white;
            box-shadow: 0 6px 20px rgba(118, 75, 162, 0.6);
        }

    .btn-gradient-warning {
        background: linear-gradient(135deg, #f6d365 0%, #fda085 100%);
        border: none;
        color: white;
        padding: 10px 20px;
        border-radius: 50px;
        font-weight: 600;
        box-shadow: 0 4px 15px rgba(253, 160, 133, 0.4);
        transition: transform 0.2s;
    }

        .btn-gradient-warning:hover {
            transform: translateY(-2px);
            color: white;
        }

    /* Pagination */
    .page-btn {
        background: white;
        border: 2px solid #eee;
        color: #764ba2;
        border-radius: 10px;
        padding: 8px 15px;
        transition: all 0.3s;
    }

        .page-btn:hover {
            border-color: #764ba2;
            background: #764ba2;
            color: white;
        }
</style>

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h2 class="display-6 page-title mb-0">
                <i class="bi bi-grid-fill me-2"></i>Kategoriler
            </h2>
            <p class="text-muted small mb-0">Kütüphane arşivini düzenle ve yönet.</p>
        </div>

        <div class="d-flex gap-2">
            <button class="btn btn-gradient-warning" @onclick="RaporIndir">
                <i class="bi bi-file-earmark-pdf-fill me-1"></i> Rapor Al
            </button>

            <AuthorizeView Roles="Yonetici,Kutuphaneci">
                <Authorized>
                    <button class="btn btn-gradient-primary" @onclick="() => KayitFormuAc(new Kategori())">
                        <i class="bi bi-plus-lg me-1"></i> Yeni Kategori
                    </button>
                </Authorized>
            </AuthorizeView>
        </div>
    </div>

    <div class="modern-card p-4">

        <div class="row mb-4">
            <div class="col-md-4">
                <div class="position-relative">
                    <input type="text" class="form-control search-input ps-5" placeholder="Kategori Ara..."
                           @bind="SearchText" @bind:event="oninput" @onkeyup="VerileriGetir" />
                    <i class="bi bi-search position-absolute text-muted" style="left: 20px; top: 14px;"></i>
                </div>
            </div>
        </div>

        <div class="table-responsive" style="border-radius: 15px; overflow: hidden;">
            <table class="table modern-table mb-0">
                <thead>
                    <tr>
                        <th>#ID</th>
                        <th>Kategori Adı</th>
                        <th>Açıklama</th>
                        <th class="text-center">Durum</th>
                        <AuthorizeView Roles="Yonetici,Kutuphaneci">
                            <Authorized><th class="text-end pe-4">İşlemler</th></Authorized>
                        </AuthorizeView>
                    </tr>
                </thead>
                <tbody>
                    @if (KategoriListesi == null)
                    {
                        <tr><td colspan="5" class="text-center py-5 text-muted">Yükleniyor...</td></tr>
                    }
                    else if (KategoriListesi.Count == 0)
                    {
                        <tr><td colspan="5" class="text-center py-5 text-muted"><i class="bi bi-inbox fs-1 d-block mb-2"></i>Kayıt bulunamadı.</td></tr>
                    }
                    else
                    {
                        @foreach (var item in KategoriListesi)
                        {
                            <tr>
                                <td class="fw-bold text-primary">#@item.Id</td>
                                <td class="fw-bold text-dark">@item.Ad</td>
                                <td class="text-secondary">@item.Aciklama</td>
                                <td class="text-center">
                                    @if (item.AktifMi)
                                    {
                                        <span class="status-badge status-active">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="status-badge status-passive">Pasif</span>
                                    }
                                </td>

                                <AuthorizeView Roles="Yonetici,Kutuphaneci">
                                    <Authorized>
                                        <td class="text-end pe-3">
                                            <button class="btn-action btn-edit" title="Düzenle" @onclick="() => KayitFormuAc(item)">
                                                <i class="bi bi-pencil-fill"></i>
                                            </button>
                                            <button class="btn-action btn-delete" title="Sil" @onclick="() => Sil(item.Id)">
                                                <i class="bi bi-trash-fill"></i>
                                            </button>
                                        </td>
                                    </Authorized>
                                </AuthorizeView>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-center mt-4">
            <div class="d-flex gap-2 align-items-center">
                <button class="page-btn @(PageNumber == 1 ? "disabled opacity-50" : "")" @onclick="() => SayfaDegistir(PageNumber - 1)">
                    <i class="bi bi-chevron-left"></i>
                </button>
                <span class="fw-bold text-muted mx-2">Sayfa @PageNumber</span>
                <button class="page-btn @(KategoriListesi?.Count < PageSize ? "disabled opacity-50" : "")" @onclick="() => SayfaDegistir(PageNumber + 1)">
                    <i class="bi bi-chevron-right"></i>
                </button>
            </div>
        </div>
    </div>
</div>

@if (FormAcikMi)
{
    <div class="modal fade show d-block" style="background-color: rgba(0,0,0,0.6); backdrop-filter: blur(4px);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg" style="border-radius: 20px;">
                <div class="modal-header border-0 pb-0">
                    <h5 class="modal-title fw-bold text-primary ps-2">
                        @(SeciliKategori.Id == 0 ? "✨ Yeni Kategori" : "✏️ Kategori Düzenle")
                    </h5>
                    <button type="button" class="btn-close" @onclick="FormuKapat"></button>
                </div>
                <div class="modal-body p-4">
                    <div class="mb-3">
                        <label class="fw-bold text-muted small mb-1">Kategori Adı</label>
                        <input class="form-control form-control-lg bg-light border-0" @bind="SeciliKategori.Ad" placeholder="Örn: Tarih" style="border-radius: 10px;" />
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold text-muted small mb-1">Açıklama</label>
                        <textarea class="form-control bg-light border-0" @bind="SeciliKategori.Aciklama" rows="3" placeholder="Açıklama giriniz..." style="border-radius: 10px;"></textarea>
                    </div>
                    <div class="form-check form-switch p-3 bg-light rounded-3 ms-0">
                        <input class="form-check-input ms-0 me-2" type="checkbox" @bind="SeciliKategori.AktifMi" id="chkAktif" />
                        <label class="form-check-label fw-bold text-dark" for="chkAktif">Aktif Durumda</label>
                    </div>
                </div>
                <div class="modal-footer border-0 pt-0 pe-4 pb-4">
                    <button class="btn btn-light rounded-pill px-4" @onclick="FormuKapat">İptal</button>
                    <button class="btn btn-gradient-primary rounded-pill px-4" @onclick="Kaydet">Kaydet</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    // --- C# KODLARI AYNIDIR, DEĞİŞTİRMEYE GEREK YOK ---
    private List<Kategori> KategoriListesi = new();
    private Kategori SeciliKategori = new();
    private string SearchText = "";
    private int PageNumber = 1;
    private int PageSize = 5;
    private bool FormAcikMi = false;

    protected override async Task OnInitializedAsync()
    {
        await VerileriGetir();
    }

    private async Task VerileriGetir()
    {
        var result = await Provider.GetItems<Kategori>("sp_Kategoriler_Islem",
            ("IslemTuru", "LISTE"),
            ("PageNumber", PageNumber),
            ("PageSize", PageSize),
            ("SearchText", SearchText ?? "")
        );
        KategoriListesi = result.ToList();
    }

    private async Task SayfaDegistir(int yeniSayfa)
    {
        if (yeniSayfa < 1) return;
        PageNumber = yeniSayfa;
        await VerileriGetir();
    }

    private void KayitFormuAc(Kategori kategori)
    {
        SeciliKategori = new Kategori
        {
            Id = kategori.Id,
            Ad = kategori.Ad,
            Aciklama = kategori.Aciklama,
            AktifMi = kategori.AktifMi
        };
        FormAcikMi = true;
    }

    private void FormuKapat() => FormAcikMi = false;

    private async Task Kaydet()
    {
        await Provider.Execute<Kategori>("sp_Kategoriler_Islem",
            ("IslemTuru", "KAYDET"),
            ("Id", SeciliKategori.Id),
            ("Ad", SeciliKategori.Ad),
            ("Aciklama", SeciliKategori.Aciklama ?? ""),
            ("AktifMi", SeciliKategori.AktifMi)
        );
        FormAcikMi = false;
        await VerileriGetir();
    }

    private async Task Sil(int id)
    {
        bool onayla = await JS.InvokeAsync<bool>("confirm", "Bu kategoriyi silmek istediğinize emin misiniz?");
        if (onayla)
        {
            await Provider.Execute<Kategori>("sp_Kategoriler_Islem", ("IslemTuru", "SIL"), ("Id", id));
            await VerileriGetir();
        }
    }

    private async Task RaporIndir()
    {
        var pdfBytes = ReportService.GenerateKategoriRaporu(KategoriListesi);
        using var stream = new MemoryStream(pdfBytes);
        using var streamRef = new DotNetStreamReference(stream);
        await JS.InvokeVoidAsync("downloadFileFromStream", "KategoriListesi.pdf", streamRef);
    }
}